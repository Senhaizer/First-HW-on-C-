// Четные числа от 1 до n

Console.WriteLine("Введите число n.");
int n = int.Parse(Console.ReadLine());
int count = 1;

while (count <= n)
{
    if (count % 2 == 0)
    {
        Console.Write(count + " ");
        count++;
    }
    else
    {
        count++;
    }
}
Console.Write("Отсчет окончен!");
